{
  "name": "threely",
  "version": "1.0.0",
  "description": "A Three.js DSL library for functional 3D graphics programming",
  "keywords": ["threejs", "3d", "graphics", "dsl", "functional", "webgl"],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/threely.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/three": "^0.177.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.37.1",
    "@replit/codemirror-vim": "^6.3.0",
    "@solidjs/signals": "^0.3.2",
    "codemirror": "^6.0.1",
    "three": "^0.177.0",
    "uuid": "^11.1.0"
  },
  "scripts": {
    "build:package": "npm run build:types && npm run build:bundle",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist src/lib.ts",
    "build:bundle": "node build-lib.mjs",
    "build": "node esbuild.mjs",
    "test": "jest",
    "prepublishOnly": "npm run build"
  }
}
